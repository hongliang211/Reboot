<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#eee"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/bottom_navigation_bar_img_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:onClick="chat"
        android:background="@drawable/bottom_ng_bar_img_1"
        app:layout_constraintRight_toLeftOf="@+id/bottom_navigation_bar_img_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/bottom_navigation_bar_img_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:onClick="friend"
        android:background="@drawable/bottom_ng_bar_img_2"
        app:layout_constraintRight_toLeftOf="@+id/bottom_navigation_bar_img_3"
        app:layout_constraintLeft_toRightOf="@+id/bottom_navigation_bar_img_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/bottom_navigation_bar_img_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:onClick="firend_circle"
        android:background="@drawable/bottom_ng_bar_img_3"
        app:layout_constraintRight_toLeftOf="@+id/bottom_navigation_bar_img_4"
        app:layout_constraintLeft_toRightOf="@+id/bottom_navigation_bar_img_2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/bottom_navigation_bar_img_4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:background="@drawable/bottom_ng_bar_img_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bottom_navigation_bar_img_3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
