<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/fm_drawerlayout_left_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fm_drawerlayout_left_img_circle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/fm_drawerlayout_left_img"
        app:layout_constraintTop_toTopOf="@+id/fm_drawerlayout_left_img"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/fm_drawerlayout_left_name"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="少年清狂"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/fm_drawerlayout_left_img_circle"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toTopOf="@+id/fm_drawerlayout_left_img"
        android:layout_marginTop="50dp" />

</android.support.constraint.ConstraintLayout>
