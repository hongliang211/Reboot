<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--left_item-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/left_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdasdas"
        android:gravity="left|center"
        android:textSize="16dp"
        android:maxWidth="200dp"
        android:background="@drawable/left"
        app:layout_constraintLeft_toRightOf="@+id/left_head"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/left_textview" />
    <ImageView
        android:id="@+id/left_lmageview"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/left_head"
        android:layout_marginLeft="8dp" />

<!--right_item-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/right_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdasdas"
        android:maxWidth="200dp"
        android:background="@drawable/right"
        android:gravity="left|center"
        android:textSize="16dp"
        android:id="@+id/right_textview"
        app:layout_constraintRight_toLeftOf="@+id/right_head"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <ImageView
        android:id="@+id/right_lmageview"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:onClick="chat_pic"
        app:layout_constraintRight_toLeftOf="@+id/right_head"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
